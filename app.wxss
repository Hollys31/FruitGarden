/**app.wxss**/

page {
  background: #fff;
  color: #333;
  font-size: 26rpx;
  line-height: 1.6em;
  padding-bottom: 110rpx;
}
button::after{
    border: 0;
}
.mainColor{
  color: #06caac;
}
.mainbg{
   background: #0dcbae;
}
.content {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.clearfix:after {
  display: block;
  clear: both;
  content: "";
  visibility: hidden;
  height: 0;
}

.clearfix{
  zoom: 1;
}
.shadow {
  background-image: -webkit-gradient(linear, left top, left bottom, from(rgba(255, 255, 255, 0.13)), color-stop(90%, #fff));
  background-image: linear-gradient(-180deg, rgba(255, 255, 255, 0.13) 0%, #fff 90%);
  position: absolute;
  width: 100%;
  height: 180rpx;
  bottom: 0;
}
.container {
  padding: 0 20rpx;
}
.normal-font{
  font-size: 26rpx;
}
.m-font{
  font-size: 28rpx;
}
.l-font{
  font-size: 30rpx;
}
.nomore{
  font-size: 22rpx;
  width: 100%;
  text-align: center;
  color: #ccc
}
.nodate {
  width: 750rpx;
  height: 700rpx;
  color: #999;
  font-size: 32rpx;
  text-align: center;
  padding-top: 150rpx;
  line-height: 100rpx;
}

.nodate image {
  width: 394rpx;
  height: 225rpx;
  display: block;
  margin: 0 auto;
}
.tabbar_box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  top: auto;
  bottom: 0;
  left: 0;
  z-index: 9199;
  width: 100%;
  height: 90rpx;
  padding-top: 10rpx;

  border-top: 1rpx solid #f7f7f7;
 /*  box-shadow: 0 0 15rpx 4rpx rgba(0, 166, 102, 0.1); */
  overflow: hidden;

}
