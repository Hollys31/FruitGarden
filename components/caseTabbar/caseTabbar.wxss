/* components/caseTabbar/caseTabbar.wxss */
.tabbar_box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  top: auto;
  bottom: 0;
  left: 0;
  z-index: 9199;
  width: 100%;
  height: 110rpx;
  padding-top: 5rpx;
  background: #fff;
  border-top: 1rpx solid #f7f7f7;
  /*  box-shadow: 0 0 15rpx 4rpx rgba(0, 166, 102, 0.1); */
  overflow: hidden;
}

.tabbar_box.iphoneX-height {
  padding-bottom: 54rpx;
}
.tabbar_nav {
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  font-size: 24rpx;
  height: 100%;
  position: relative;
  color: #ccc;
  text-align: center;
  line-height: 1.2em;
}

.tabbar_nav image {
  width: 68rpx;
  height: 68rpx;
  display: block;
  margin: 0 auto;
}

.tabbar_nav>view {
  height: 30rpx;
  line-height: 30rpx;
}

.tabbar_icon {
  width: 50rpx;
  height: 50rpx;
  background: none;
}

.tabbar_nav>text {
  line-height: 1.2em;
  color: #ccc;
}
