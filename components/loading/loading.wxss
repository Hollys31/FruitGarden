/* components/loading/loading.wxss */

.loader {
  width: 200rpx;
  height: 200rpx;
  position: fixed;
  z-index: 10000;
  top: 50%;
  left: 50%;
  margin-left: -40rpx;
  margin-top: -100rpx;
}


@-webkit-keyframes ball-triangle-path-1 {
  33% {
    -webkit-transform: translate(50rpx, -100rpx);
            transform: translate(50rpx, -100rpx); }

  66% {
    -webkit-transform: translate(100rpx, 0rpx);
            transform: translate(100rpx, 0rpx); }

  100% {
    -webkit-transform: translate(0rpx, 0rpx);
            transform: translate(0rpx, 0rpx); } }

@keyframes ball-triangle-path-1 {
  33% {
    -webkit-transform: translate(50rpx, -100rpx);
            transform: translate(50rpx, -100rpx); }

  66% {
    -webkit-transform: translate(100rpx, 0rpx);
            transform: translate(100rpx, 0rpx); }

  100% {
    -webkit-transform: translate(0rpx, 0rpx);
            transform: translate(0rpx, 0rpx); } }

@-webkit-keyframes ball-triangle-path-2 {
  33% {
    -webkit-transform: translate(50rpx, 100rpx);
            transform: translate(50rpx, 100rpx); }

  66% {
    -webkit-transform: translate(-50rpx, 100rpx);
            transform: translate(-50rpx, 100rpx); }

  100% {
    -webkit-transform: translate(0rpx, 0rpx);
            transform: translate(0rpx, 0rpx); } }

@keyframes ball-triangle-path-2 {
  33% {
    -webkit-transform: translate(50rpx, 100rpx);
            transform: translate(50rpx, 100rpx); }

  66% {
    -webkit-transform: translate(-50rpx, 100rpx);
            transform: translate(-50rpx, 100rpx); }

  100% {
    -webkit-transform: translate(0rpx, 0rpx);
            transform: translate(0rpx, 0rpx); } }

@-webkit-keyframes ball-triangle-path-3 {
  33% {
    -webkit-transform: translate(-100rpx, 0rpx);
            transform: translate(-100rpx, 0rpx); }

  66% {
    -webkit-transform: translate(-50rpx, -100rpx);
            transform: translate(-50rpx, -100rpx); }

  100% {
    -webkit-transform: translate(0rpx, 0rpx);
            transform: translate(0rpx, 0rpx); } }

@keyframes ball-triangle-path-3 {
  33% {
    -webkit-transform: translate(-100rpx, 0rpx);
            transform: translate(-100rpx, 0rpx); }

  66% {
    -webkit-transform: translate(-50rpx, -100rpx);
            transform: translate(-50rpx, -100rpx); }

  100% {
    -webkit-transform: translate(0rpx, 0rpx);
            transform: translate(0rpx, 0rpx); } }

.ball-triangle-path {
  position: relative;
  -webkit-transform: translate(-50rpx, -50rpx);
  -ms-transform: translate(-50rpx, -50rpx);
  transform: translate(-50rpx, -50rpx);
}

.ball-triangle-path > image:nth-child(1) {
  -webkit-animation-name: ball-triangle-path-1;
  animation-name: ball-triangle-path-1;
  -webkit-animation-delay: 0;
  animation-delay: 0;
  -webkit-animation-duration: 1.5s;
  animation-duration: 1.5s;
  -webkit-animation-timing-function: ease-in-out;
  animation-timing-function: ease-in-out;
  -webkit-animation-iteration-count: infinite;
  animation-iteration-count: infinite;
}

.ball-triangle-path > image:nth-child(2) {
  -webkit-animation-name: ball-triangle-path-2;
  animation-name: ball-triangle-path-2;
  -webkit-animation-delay: 0;
  animation-delay: 0;
  -webkit-animation-duration: 1.5s;
  animation-duration: 1.5s;
  -webkit-animation-timing-function: ease-in-out;
  animation-timing-function: ease-in-out;
  -webkit-animation-iteration-count: infinite;
  animation-iteration-count: infinite;
}

.ball-triangle-path > image:nth-child(3) {
  -webkit-animation-name: ball-triangle-path-3;
  animation-name: ball-triangle-path-3;
  -webkit-animation-delay: 0;
  animation-delay: 0;
  -webkit-animation-duration: 1.5s;
  animation-duration: 1.5s;
  -webkit-animation-timing-function: ease-in-out;
  animation-timing-function: ease-in-out;
  -webkit-animation-iteration-count: infinite;
  animation-iteration-count: infinite;
}

.ball-triangle-path > image {
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  position: absolute;
  width: 46rpx;
  height: 46rpx;
  border-radius: 100%;
}

.ball-triangle-path > image:nth-of-type(1) {
  top: 100rpx;
}

.ball-triangle-path > image:nth-of-type(2) {
  left: 50rpx;
}

.ball-triangle-path > image:nth-of-type(3) {
  top: 100rpx;
  left: 100rpx;
}
