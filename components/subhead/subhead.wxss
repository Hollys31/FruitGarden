/* components/subhead/subhead.wxss */

.ptitle {
  position: relative;
  width: 100%;
  height: 114rpx;
  line-height: 114rpx;
  margin: 30rpx 0;
}

.ptitle image {
  width: 564rpx;
  height: 114rpx;
  display: block;
  margin: 0 auto;
}

.ptitle .text {
  width: 100%;
  height: 114rpx;
  line-height: 114rpx;
  text-align: center;
  color: #fff;
  z-index: 2;
  position: absolute;
  top: 0;
  font-size: 48rpx;
  font-weight: bold;
}
