/* pages/case/contact.wxss */
page{
  background: #f7a54d
}
.contact{
  position:relative;
}
.contact .tips{
   color: #fff;
   font-size: 24rpx;
   text-align: center
}
.contact image.bg{
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 1132rpx;
}
.contact .focus{
  position: absolute;
  z-index: 2;
  width: 165rpx;
  height: 165rpx;
  top: 600rpx;
  left: 310rpx;
  animation: focus .8s infinite linear;
  animation-direction:alternate;
}
.contact .context{
  width: 500rpx;
  height: 300rpx;
  position: absolute;
  z-index: 3;
  left: 125rpx;
  top: 300rpx
}
.contact .focusUs{
 padding: 20rpx 15rpx;
}
.contact .focusUs .text{
  width: 225rpx;
  padding: 15rpx 0;
  margin-left: 30rpx;
  color: #f79029;
  float: left
}
.contact .focusUs text{
  display: block;
  font-size: 32rpx;
}
.contact .focusUs .tel{
  margin-bottom: 26rpx;
}
.contact .context image{
  width: 211rpx;
  height: 211rpx;
  float: left
}
@keyframes focus{
  from{
    transform: scale(1)
  }
  to{
 transform: scale(1.05)
  }
}