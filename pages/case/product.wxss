page {
  background: #ffb15d;
}

swiper {
  width: 100vw;
  height: 100vh;
}

swiper-item {
  width: 100vw;
}

.one image {
  display: block;
}

.bgos {
  width: 200rpx;
  height: 430rpx;
  position: absolute;
  top: -50rpx;
  left: -30rpx;
}
.active .bgos {
  animation: bgos 0.6s linear forwards;
}
@keyframes bgos{
  0% {
    transform: translateX(0rpx);
  }

  50% {
    transform: translateX(30rpx);
  }

  100% {
    transform: translateX(0rpx);
  }
}
.bgof {
  width: 200rpx;
  height: 430rpx;
  position: absolute;
  top: -50rpx;
  right: -30rpx;
}
.active .bgof {
  animation: bgof 0.6s linear forwards;
}
@keyframes bgof{
  0% {
    transform: translateX(0rpx);
  }

  50% {
    transform: translateX(-30rpx);
  }

  100% {
    transform: translateX(0rpx);
  }
}

.bgofo {
  width: 750rpx;
