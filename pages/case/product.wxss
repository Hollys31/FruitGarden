}

.bgoz {
  width: 750rpx;
  height: 750rpx;
  position: absolute;
  z-index: -1;
  
}
.active .bgoz {
  animation: bgoz 0.5s linear forwards;
}
@keyframes bgoz{
  0% {
    transform: scale(1);
    opacity: 0;
  }

  20% {
    transform: scale(1.5);
    opacity: 0.4;
  }
  100% {
    transform: scale(1);
  }
}

