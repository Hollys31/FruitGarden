/* pages/checking/checking.wxss */

page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #fff;
  position: relative;
}

.state {
  height: 300rpx;
  line-height: 300rpx;
  font-size: 38rpx;
}

.image-bg {
  width: 750rpx;
  height: 220rpx;
  position: fixed;
  top: 80%;
  left: 0;
  z-index: 1;
}

.check-bg {
  color: #fff;
  text-align: center;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 85%;
  background: linear-gradient(top right, #44d9ac, #57ddd3, #67e0f5);
  background: -ms-linear-gradient(top right, #44d9ac, #57ddd3, #67e0f5);
  background: -webkit-linear-gradient(top right, #44d9ac, #57ddd3, #67e0f5);
  background: -moz-linear-gradient(top right, #44d9ac, #57ddd3, #67e0f5);
}

@keyframes spin {
  to {
    transform: rotate(1turn);
  }
}

.map-wrap {
  height: 100%;
}

.map-wrap image {
  width: 621rpx;
  height: 621rpx;
  margin: 400rpx auto;
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -310.5rpx;
  margin-top: -310.5rpx;
  transform: scale(1);
}

.map-wrap.scan1>image {
  animation: move1 .6s linear;
}

.map-wrap .map {
  width: 100%;
  height: 100%;
  display: none
}
.map-wrap .map.show{
  display: block
}
@keyframes move1 {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(2.2);
  }
}

.address-wrap {
  width: 480rpx;
  padding: 20rpx;
  background: rgba(0, 130, 77, .7);
  color: #fff;
  border-radius: 10rpx;
  position: fixed;
  z-index: 999;
  right: 10rpx;
  top: 450rpx;
}
.address-wrap .item{
 width: 100%;
 line-height: 1.5em;
 font-size: 24rpx;
}
.address-wrap cover-image {
  width: 23rpx;
  height: 26rpx;
  float: left;
 margin-right: 6rpx;
}
.address-wrap .item>cover-view{
  float: left;
  width: 300rpx;
  margin-left: 20rpx;
   white-space: normal;
}
cover-view{
  white-space:unset;
  line-height:unset;

}
.coverbg {
  position: fixed;
  bottom: 20rpx;
  z-index: 99;
  width: 717rpx;
  height: 549rpx;
  left: 15rpx;
}

.product {
  width: 630rpx;
  height: 510rpx;
  position: fixed;
  bottom: 20rpx;
  padding: 20rpx 40rpx;
  left: 20rpx;
  color: #666;
  border-radius: 20rpx;
  box-shadow: 1rpx 1rpx 10rpx 2rpx #ddd;
  overflow: hidden;
  z-index: 999;
}

.product .proimg {
  width: 199rpx;
  height: 199rpx;
  float: left;
}

.product  .info .text {
  width: 390rpx;
  margin-left: 40rpx;
  line-height: 1.8em;
  float: left;
}

.product  .info .text cover-view {
  height: 40rpx;
  line-height: 40rpx;
}

.product  .info .text .name {
  font-size: 36rpx;
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: bold;
}
.product  .info .text .tags{
  margin-bottom: 10rpx;
  display: flex;
}
.product  .info .text .item{
display: flex;
flex: 1;
}
.product  .info .text .tags cover-image{
  width: 28rpx;
  height: 32rpx;
  margin-right: 10rpx;
  display: block
}
.product .desc {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-top: 6rpx;
}

.product .state-info {
  margin: 30rpx auto 0;
  color: #999;
}

.product .state-info .left, .product .state-info .right {
  float: left;
  width: 49%;
  text-align: center;
  padding-bottom: 10rpx;
  line-height: 30rpx;
}

.product .state-info .left cover-view, .product .state-info .right cover-view {
  color: #999;
  height: 56rpx;
  line-height: 56rpx;
}

.product .state-info .left {
  border-right: 2rpx solid #efefef;
}

.product .state-info  .left .green,.product .state-info  .right .green {
  font-size: 30rpx;
  font-weight: bold;
  color: #06caac;
}

.product .state-info  .right .red {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff4545;
}

.product .lookmore {
  width: 199rpx;
  height: 66rpx;
  line-height: 66rpx;
  background:#06caac;
  border-radius: 31rpx;
  margin: 10rpx auto 0;
  text-align: center;
  color: #fff;
}

.product .lookmore navigator {
  color: #fff;
  display: block;
}
